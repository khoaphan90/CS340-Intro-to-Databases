                <label>Release Date</label>
                <input type="date" name="releasedate" value="<%= context[i].releasedate %>" required>
            </div>
            <div class="field">
                <label>Publisher</label>
                <select name="publisherID" required>
                    <optgroup>
                        <% for(var i = 0; i < publisher.length; i++){ %>
                        <option value="<%= publisher[i].publisherID %>"><%= publisher[i].name %></option>
                        <% }; %>
                    </optgroup>
                </select>
            </div>
